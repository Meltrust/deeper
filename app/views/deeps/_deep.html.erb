<article class="d-flex pt-3">
  <figure class="w-auto mt-0 me-0 my-md-0 mb-2 me-lg-3 m-lg-0">
    <%= cl_image_tag(current_user.photo.key, class: 'm-0 m-sm-1 mt-sm-0 deeps-headshot', :width=>55, :height=>55, :gravity=>"face", :crop=>"thumb") %>
    <!--
    <img class="m-0 m-sm-1 mt-sm-0 deeps-headshot rounded" src="https://avatars.githubusercontent.com/u/57421823?s=60&amp;v=4" alt="">
    -->
  </figure>
  <div class="d-flex flex-column p-2 pt-0 w-100">
    <p class="pb-3 mb-0 small lh-sm deep-text-dark"> <%= deep.text %>
    </p>
    <strong class="blockquote-footer black-text d-block text-gray-dark m-0 align-self-end align-self-lg-stretch"><%= deep.user.fullname %></strong>
  </div>
</article>
